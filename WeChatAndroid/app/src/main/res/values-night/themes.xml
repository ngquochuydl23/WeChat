<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="WeChatAndroidDark" parent="Base.Theme.WeChatAndroid">
        <item name="android:statusBarColor">@color/foregroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/foregroundColor</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:titleTextColor">@color/textColorPrimary</item>
    </style>

    <style name="WeChatMainToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/foregroundColor</item>
        <item name="actionMenuTextColor">@color/textColorPrimary</item>
        <item name="android:titleTextColor">@color/textColorPrimary</item>
    </style>

    <style name="WeChatMainToolbar_TitleTextAppearance">
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>